<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="382dp"
            android:layout_height="96dp"
            android:layout_margin="20dp"
            android:background="@android:color/holo_blue_bright"
            android:paddingLeft="40dp"
            android:text="Calcul IMC"
            android:textColor="@color/colorAccent"
            android:textSize="60sp"
            android:textStyle="bold"
            tools:layout_width="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="100dp">

            <TextView
                android:id="@+id/nbPoids"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Poids en kg"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/nbTaille"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Taille en m"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nbImc"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="Votre indice :"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnImc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IMC"
                android:textColor="@color/colorAccent"
                tools:background="@android:color/holo_orange_dark" />

            <TextView
                android:id="@+id/txtInter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Interpretation : "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>